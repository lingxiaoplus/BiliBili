<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/cardStyle"
        app:cardCornerRadius="5dp"
>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/play_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:viewAspectRatio="1.43"
                app:placeholderImageScaleType="centerInside"
                app:placeholderImage="@drawable/ic_live_no_face"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/play_title"
                app:layout_constraintVertical_bias="0.0"
        />
        <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@id/play_image"
                android:layout_margin="3dp"
        >
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_img_play_number"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:tint="@color/white"
            />
            <TextView
                    android:id="@+id/play_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="play number"
                    android:textColor="@color/white"
                    tools:textColor="@color/black"

            />

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_img_danmaku_number"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:tint="@color/white"
            />
            <TextView
                    android:id="@+id/comment_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="comment"
                    android:textColor="@color/white"
                    tools:textColor="@color/black"
            />
        </LinearLayout>
        <TextView
                android:id="@+id/play_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/play_image"
                app:layout_constraintBottom_toBottomOf="@id/cons_category"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
        />
        <android.support.constraint.ConstraintLayout
                android:id="@+id/cons_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/play_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_goneMarginTop="@dimen/dp_4"
        >
            <TextView
                    android:id="@+id/category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="category name"
                    android:layout_margin="3dp"
                    android:textColor="@color/black_alpha_112"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.5"
            />
            <ImageView
                    android:id="@+id/image_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_img_more_menu"
                    android:padding="5dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                    android:background="@drawable/ripple_background"
            />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>